{
  "$defs": {
    "ConversionConfig": {
      "properties": {
        "repaginate": {
          "default": true,
          "title": "Repaginate",
          "type": "boolean"
        },
        "dpi": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "number"
            }
          ],
          "default": 300,
          "title": "Dpi"
        },
        "height": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "number"
            }
          ],
          "default": 297,
          "title": "Height"
        }
      },
      "title": "ConversionConfig",
      "type": "object"
    },
    "DirectoriesConfig": {
      "properties": {
        "source": {
          "title": "Source",
          "type": "string"
        },
        "target": {
          "title": "Target",
          "type": "string"
        },
        "cleanup": {
          "default": true,
          "title": "Cleanup",
          "type": "boolean"
        }
      },
      "required": [
        "source",
        "target"
      ],
      "title": "DirectoriesConfig",
      "type": "object"
    },
    "HookConfig": {
      "properties": {
        "pre": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Pre"
        },
        "post": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Post"
        }
      },
      "title": "HookConfig",
      "type": "object"
    },
    "IndexConfig": {
      "properties": {
        "toc": {
          "default": true,
          "title": "Toc",
          "type": "boolean"
        },
        "breadcrumbs": {
          "default": true,
          "title": "Breadcrumbs",
          "type": "boolean"
        },
        "depth": {
          "default": -1,
          "title": "Depth",
          "type": "integer"
        }
      },
      "title": "IndexConfig",
      "type": "object"
    },
    "LayoutConfig": {
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "description": {
          "default": "",
          "title": "Description",
          "type": "string"
        },
        "content": {
          "default": [],
          "items": {
            "$ref": "#/$defs/LayoutConfig"
          },
          "title": "Content",
          "type": "array"
        }
      },
      "required": [
        "name"
      ],
      "title": "LayoutConfig",
      "type": "object"
    },
    "MetaConfig": {
      "properties": {
        "title": {
          "default": "Matemati\u010dni Zapiski",
          "title": "Title",
          "type": "string"
        },
        "description": {
          "default": "Zapiski predavanj in vaj za \u0161tudij matematike na FMF",
          "title": "Description",
          "type": "string"
        },
        "keywords": {
          "default": [
            "matematika",
            "zapiski",
            "fmf",
            "fakulteta za matematiko in fiziko"
          ],
          "items": {
            "type": "string"
          },
          "title": "Keywords",
          "type": "array"
        },
        "author": {
          "default": "Filip \u0160tamcar",
          "title": "Author",
          "type": "string"
        },
        "language": {
          "default": "sl",
          "title": "Language",
          "type": "string"
        },
        "base": {
          "default": "https://math.filips.si/",
          "title": "Base",
          "type": "string"
        }
      },
      "title": "MetaConfig",
      "type": "object"
    }
  },
  "properties": {
    "meta": {
      "$ref": "#/$defs/MetaConfig"
    },
    "hooks": {
      "$ref": "#/$defs/HookConfig"
    },
    "conversion": {
      "$ref": "#/$defs/ConversionConfig"
    },
    "index": {
      "$ref": "#/$defs/IndexConfig"
    },
    "directories": {
      "$ref": "#/$defs/DirectoriesConfig"
    },
    "layouts": {
      "items": {
        "$ref": "#/$defs/LayoutConfig"
      },
      "title": "Layouts",
      "type": "array"
    }
  },
  "required": [
    "directories",
    "layouts"
  ],
  "title": "BaseConfig",
  "type": "object"
}
